<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.co.pulmuone.v1.comm.mapper.user.buyer.DeleteUserCIMapper">

    <!--───────────────────────────────────────────────────────────────────────
     * description 		: 사용자 CI 삭제
     * @        향후 삭제 예정.
     * @
    ────────────────────────────────────────────────────────────────────────-->
    <update id="resetUserCi" parameterType="String">
        /*	deleteUserCi.resetUserCi	*/
        UPDATE UR_BUYER b , UR_USER u
        SET b.CI_CD =''
        WHERE b.UR_USER_ID =u.UR_USER_ID
        AND u.LOGIN_ID = #{urUserId}
    </update>

</mapper>